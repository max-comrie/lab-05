<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="6dp">

    <EditText
        android:id="@+id/editDeleteCityName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter City Name"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonDeleteCity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/buttonDeleteCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:textAllCaps="true"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/buttonAddCity"
        android:text="Add City"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDeleteCityName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp" />

    <ListView
        android:id="@+id/listviewCities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddCity"
        android:layout_marginTop="6dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
